---
import logo from "../assets/images/logo_ao--white.svg";
import icoBars from "../assets/images/ico_bars--white.svg";
---

<nav class="main-nav">
  <div class="main-nav__logo-container">
    <a href="/">
      <img
        class="main-nav__logo"
        src={logo.src}
        width={logo.width}
        height={logo.height}
        alt="Logo Andrés Olivares"
      />
    </a>
  </div>
  <div class="main-nav__pres">
    <p class="main-nav__pres-name">ANDRÉS</p>
    <p class="main-nav__pres-role">FRONT-END DEV</p>
  </div>
  <div class="main-nav__options">
    <img
      class="main-nav__menu-icon"
      src={icoBars.src}
      width={icoBars.width}
      height={icoBars.height}
      alt="Icono de menú"
    />
  </div>
</nav>

<style lang="sass">
  .main-nav
    display: grid
    grid-template-columns: repeat(2, 1fr)
    align-items: center

    .main-nav__logo-container
      height: 50px

      .main-nav__logo
        max-height: 100%
        width: auto
        text-align: left

    .main-nav__pres
      text-align: center
      display: none

      .main-nav__pres-name
        font-family: var(--ff-bold)
        font-size: var(--fs-paragraph-xs)
        letter-spacing: .7rem
        margin-right: calc(.7rem * -1)

      .main-nav__pres-role
        font-family: var(--ff-regular)
        font-size: var(--fs-caption-xs)
        letter-spacing: .4rem
        margin-right: calc(.4rem * -1)
        line-height: inherit

    .main-nav__options
      margin-left: auto
      opacity: 0

  // Exclusivo para vistas SOBRE los 1214px de ancho
  @media (min-width: 1214px)
    .main-nav
      grid-template-columns: repeat(3, 1fr)

      .main-nav__pres
        display: block
</style>
