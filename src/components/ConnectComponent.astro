---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="contact-form">
  <div class="form--wrapper">
    <div class="titles">
      <h3>{t('connect.title')}</h3>
      <p>{t('connect.subtitle')}</p>
    </div>
    <form
      class="form form--inline"
      action="https://api.web3forms.com/submit"
      method="POST"
    >
      <input
        type="hidden"
        name="access_key"
        value="73197cf9-edbd-4a83-8f9c-d8df078c5576"
      />
      <input type="hidden" name="subject" value="Nuevo contacto" />
      <input type="hidden" name="from_name" value="andresolivares.com" />

      <div class="input-container">
        <input
          class="input__element"
          type="text"
          name="social_name"
          placeholder={t('connect.form.social.input')}
          required
        />
      </div>
      <div class="input-container">
        <input
          class="input__element"
          type="email"
          name="email"
          placeholder={t('connect.form.email.input')}
          required
        />
      </div>
      <input
        type="hidden"
        name="redirect"
        value="https://ao-web.vercel.app/thanks"
      />
      <button class="btn" type="submit">{t('connect.form.action')}</button>
    </form>
  </div>
</section>