    </h2>
    <a class="index-url" href={translatePath('/portfolio/')}>
      <h2 class="title">
        {t('nav.portfolio')}
      </h2>
    </a>
    <a class="index-url" href={translatePath('/connect/')}>
      <h2 class="title">
        {t('nav.connect')}
      </h2>
    </a>
  </section>
  <div class="animation-container">
    <AnimationComponent />
  </div>
</div>